{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                },
                {
                  "uri": "wamp.subscription.get_events",
                  "match": "exact",
                  "allow": {
                    "call": true
                  },
                  "disclose": {
                    "caller": true
                  },
                  "cache": true
                }
              ]
            }
          ],
          "store": {
            "type": "memory",
            "event-history": [
              {
                "uri": "com.lambentri.edge.la4.machine.link",
                "match":"prefix",
                "limit": 1
              }
            ]
          }
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../web"
            },
            "static": {
              "type": "static",
              "directory": "../static"
            },
            "ws": {
              "type": "websocket"
            }
          }
        }
      ]
    }
  ]
}
